	<% request.setAttribute( "list", new Integer[]{1, 2, 3} ); %>
  
	<jstl:forEach var="x" items="${list}">
		<jstl:out value="${x / 2}" />
	</jstl:forEach>
	
	<br/>
	
	<jstl:set var="n" value="${15}" />
	<jstl:choose>
		<jstl:when test="${n % 2 == 0}">
			It's even
		</jstl:when>
		<jstl:otherwise>
			It's odd
		</jstl:otherwise>
	</jstl:choose>
	
	<br/>
	
	<jstl:forEach var="i" 
		begin="${1}" end="${10}">
		<jstl:if test="${i * i < 25}">
			[<jstl:out value="${i}" />]
		</jstl:if>
	</jstl:forEach>	
	
	

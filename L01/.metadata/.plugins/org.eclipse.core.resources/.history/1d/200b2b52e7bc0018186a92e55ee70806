package repositories;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import domain.Shout;

@Repository
public interface ShoutRepository extends JpaRepository<Shout, Integer> {

	@Override
	@Query("select count(s) from Shout s")
	public long count();

	@Query("select count(s) from Shout s where s.text.length <= 25")
	public long countShort();

	@Query("select count(s) from Shout s where s.text.length > 25")
	public long countLong();

}

public class LoggerHelper {
	
	public static void TurnOff() {
		List<Logger> loggers;
		
		loggers = Collections.<Logger>list(LogManager.getCurrentLoggers());
		loggers.add(LogManager.getRootLogger());
		for ( Logger logger : loggers ) {
		    logger.setLevel(Level.OFF);
		}
	}

}
